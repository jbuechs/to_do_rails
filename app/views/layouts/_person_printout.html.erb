<table class="table table-hover">
  <thead>
    <tr>
      <td>Name</td>
      <td>Email address</td>
      <td># to do</td>
      <td>total</td>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= link_to person.name, "/people/#{person.id}" %></td>
        <td><%= person.email %></td>
        <td><%= num_incomplete(person.id) %></td>
        <td><%= link_to total_tasks(person.id), "/people/#{person.id}/tasks" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
